---
interface Props {
  title: string;
  description: string;
  link: string;
  github: string;
  image: string;
}

const { title, description, link, github, image } = Astro.props;
---

<div class="max-w-sm border rounded-lg shadow m-3 card-bg">
  <a href={link} target="_blank">
    <img class="rounded-t-lg h-48 w-full" src={image} alt="" />
  </a>
  <div class="p-5">
    <a href={link} target="_blank">
      <h5
        class="mb-2 text-2xl font-bold tracking-tight text-white dark:text-white"
      >
        {title}
      </h5>
    </a>
    <p class="mb-3 text-justify font-normal text-gray-200 dark:text-gray-600">
      {description}
    </p>
    <a
      href={github}
      target="_blank"
      class="inline-flex items-center px-3 py-2 text-sm text-center text-black bg-white rounded-lg hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-blue-700 font-semibold"
    >
      Github
      <svg
        class="rtl:rotate-180 w-6 h-6 ms-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
      >
        <path
          d="M12 2C6.48 2 2 6.48 2 12c0 4.41 2.87 8.16 6.84 9.5.5.09.68-.22.68-.48 0-.24-.01-.85-.01-1.67-2.79.6-3.38-1.33-3.38-1.33-.45-1.12-1.1-1.42-1.1-1.42-.9-.61.07-.6.07-.6 1-.07 1.62.92 1.62.92.89 1.52 2.34 1.08 2.91.83.09-.64.35-1.08.64-1.33-2.22-.25-4.56-1.11-4.56-4.93 0-1.09.39-1.99 1.03-2.69-.1-.26-.45-1.31.1-2.73 0 0 .84-.27 2.74 1.02a9.51 9.51 0 0 1 2.5-.34c.85.01 1.72.11 2.5.34 1.89-1.29 2.74-1.02 2.74-1.02.55 1.42.2 2.47.1 2.73.63.7 1.03 1.6 1.03 2.69 0 3.83-2.35 4.68-4.59 4.93.35.3.66.89.66 1.8 0 1.3-.01 2.37-.01 2.7 0 .26.18.58.68.48A10.01 10.01 0 0 0 22 12c0-5.52-4.48-10-10-10z"
        ></path>
      </svg>
    </a>
    <a
      href={link}
      target="_blank"
      class="inline-flex items-center px-3 py-2.5 text-sm text-center text-black bg-white rounded-lg hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-blue-700 font-semibold ms-2"
    >
      Visit It
      <svg
        class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
        aria-hidden="true"
        xmlns="/images/github-mark/github-mark.svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </a>
  </div>
</div>

<style>
  .card-bg {
    box-shadow:
      rgba(255, 255, 255, 0.05) 0px 0px 0px 1px,
      rgba(63, 64, 67, 0.29) 0px 0px 0px 1px inset;
    border: 1px solid white;
  }
</style>
