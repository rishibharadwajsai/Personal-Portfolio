---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Rishi Bharadwaj Sai - About">
  <main>
    <center>
      <div class="hero-img mt-32 w-44 h-44"></div>
    </center>
  </main>

  <style>
    .hero-img {
      position: relative;
      border: 3px solid white;
      border-radius: 50%;
      background-image: url(/images/rishi-image.jpg);
      background-position: center;
      background-size: cover;
      box-shadow: 0 0 10px white;
    }

    .hero-img::after {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: 2px solid white;
      border-radius: 50%;
      background: rgba(0, 0, 0, 0.123);
      pointer-events: none;
    }
  </style></Layout
>
